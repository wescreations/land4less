            = link_to "Sell Your Land", sell_your_land_path, :class => "nav-link"
        %li#button2.nav-item.mr-4
          %p{:style => "font-family: work sans; padding-top: 8px; color: gray; font-size: 17px; font-weight: 500;color: #008ABE;  "}
            Finance
            %i.fas.fa-caret-down.ml-1
          .submenu2
            = link_to "Process", process_path, :class => "nav-link"
            = link_to "Get Financing", financing_path, :class => "nav-link"
            = link_to "Make Offer", make_offer_path, :class => "nav-link"
            = link_to "Sell Your Land", sell_your_land_path, :class => "nav-link"
        %li.nav-item.mr-4
          = link_to "FAQ", faq_path, :class => "nav-link"
        %li.nav-item.mr-4
          = link_to "About Us", about_us_path, :class => "nav-link"
        %li.nav-item.mr-4
          = link_to "Contact Us", contact_path, :class => "nav-link"
:javascript
  $( document ).ready(function() {

      $('.submenu1').hide();
      $('.submenu2').hide();


    $('#button1').click(function(){
      $('.submenu1').toggle();
    });

    $('#button2').click(function(){
      $('.submenu2').toggle();
    });

    let endpoint = 'https://api.linkpreview.net'
    let apiKey = '5b578yg9yvi8sogirbvegoiufg9v9g579gviuiub8'

      $( ".content a" ).each(function( index, element ) {
        console.log($( this ).text());
      $.ajax({
          url: endpoint + "?key=" + apiKey + " &q=" + $( this ).text(),
          contentType: "application/json",
          dataType: 'json',
          success: function(result){
              console.log(result);
          }
      })
    });
  });
