<div class="container"> 

<%= form_for @property do |f| %> 


	<div class="row">
		<div class="col-sm-8">
			<div class="form-group"  style="width: 100%;">
				<label>Name</label>
				<%= f.text_field :name, :class=> 'form-control'  %>
			</div>
		</div>
		<div class="col-sm-4">
			<div class="form-group">
				<label>Price</label>
				<%= f.text_field :price, :class=> 'form-control'  %>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-sm-8">
			<div class="form-group"  style="width: 100%;">
				<label>Address</label>
				<%= f.text_field :address_1, :class=> 'form-control'  %>
			</div>
		</div>
		<div class="col-sm-4">
			<div class="form-group">
				<label>City</label>
				<%= f.text_field :city, :class=> 'form-control'  %>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-sm-8">
			<div class="form-group"  style="width: 100%;">
				<label>State</label>
               <%= f.select :state, [" ", "Arizona","Texas","California", "New Mexico"], {}, { class: "form-control mr-4", :placeholder => "search by name..." } %>
			</div>
		</div>
		<div class="col-sm-4">
			<div class="form-group">
				<label>ZIP</label>
				<%= f.text_field :zip, :class=> 'form-control'  %>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-sm-8">
			<div class="form-group"  style="width: 100%;">
				<label>APN</label>
				<%= f.text_field :apn, :class=> 'form-control'  %>
			</div>
		</div>
		<div class="col-sm-4">
			<div class="form-group">
				<label>Monthly Payment</label>
				 <%= f.select :monthly_payment, [" ", "$129 Per Month","$229 Per Month","$329 Per Month", "$429 Per Month"], {}, { class: "form-control mr-4", :placeholder => "search by name..." } %>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-sm-8">
			<div class="form-group"  style="width: 100%;">
				<label>Acre</label>
               	<%= f.select :acre, [" ", "0 - .5",".51 - 2","2.01 - 5", "5.01 - 10", "10.01 - 15", "15.01 - 20", "20.01 - 40", "40.01 - 60", "60.01 - 80"], {}, { class: "form-control mr-4", :placeholder => "search by name..." } %>
			</div>
		</div>
		<div class="col-sm-4">
			<div class="form-group">
				<label>Price Group</label>
               	<%= f.select :price_group, [" ", "$0 - $1,000","$1,001 - $2,500","$2,501 - $5,000", "$5,001 - $7,500", "$7,501 - $10,000","$10,001 - $20,000", "$20,001 - $35,000", "$35,001 - $50,000", "$50,001 - $75,000"], {}, { class: "form-control mr-4", :placeholder => "search by name..." } %>

			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-sm-8">
			<div class="form-group"  style="width: 100%;">
				<label>Description</label>
				<%= f.text_field :description, :class=> 'form-control'  %>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-sm-12">
			<div class="form-group"  style="width: 100%;">
				<label>Size</label>
				<%= f.text_field :size, :class=> 'form-control'  %>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-sm-8">
			<div class="form-group"  style="width: 100%;">
				<label>Latitude</label>
				<%= f.text_field :lat, :class=> 'form-control'  %>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-sm-12">
			<div class="form-group"  style="width: 100%;">
				<label>Longitude</label>
				<%= f.text_field :long, :class=> 'form-control'  %>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-sm-6">
			<div class="form-group"  style="width: 100%;">
				<label>Image</label>
	  				<%= f.file_field :main_photo %>
			</div>
		</div>
		<div class="col-sm-6">
			<div class="form-group"  style="width: 100%;">
				<label>Image</label>
	  				<%= f.file_field :photos, multiple: true %>
			</div>
		</div>
	</div>

	 <div class="modal-footer">
		 		<%= f.submit 'CREATE', :class => 'btn btn-primary'%> 

        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
	</div>
<% end %> 


</div>